{% extends 'base.html.twig' %}

{% block content_body %}
<div class="col-xl-6 mt-5">
    <h4>{{ 'payments.edit.for'|trans }} {{ car.name }}</h4>

    {{ form_start(paymentForm)}}
        {{ form_widget(paymentForm) }}

        <button type="submit" class="btn btn-outline-dark my-3">{{ 'payments.edit.update'|trans }}</button>
        <a href='{{ path('app_payment_delete', {payment: payment.id}) }}' class="btn btn-outline-danger my-3">{{ 'payments.delete'|trans }} <i class="fas fa-trash text-danger"></i></a>
    {{ form_end(paymentForm) }}
</div>
{% endblock %}