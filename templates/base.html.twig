<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
         
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid p-0">
            <header>
                <nav class="navbar navbar-expand-lg bg-dark p-2">
                    <a class="navbar-brand text-white" href="#">
                        <i class="fa-solid fa-car"></i>
                        <i class="fa-solid fa-van-shuttle"></i>
                        <i class="fa-solid fa-truck-moving"></i>
                        <b>Car Coop</b>
                    </a>
                    <div class="container-fluid">
                        {%if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <nav class="navbar navbar-expand-sm">
                                <ul class="navbar-nav">
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="{{ path('app_booking_show') }}">Calendar</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="{{ path('app_trip_list') }}">Trips</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="{{ path('app_expense_list') }}">Expenses</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" href="{{ path('app_payment_list') }}">Payments</a>
                                    </li>
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">Admin</a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="{{ path('app_car_edit') }}">Manage car</a></li>
                                            <li><a class="dropdown-item" href="{{ path('app_user_list') }}">Manage users</a></li>
                                        </ul>
                                    </li>
                                </ul>
                        </nav>
                        <nav class="navbar navbar-expand-sm mx-3">
                            <div class="nav-item dropdown">
                                <a class="nav-link text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    <img class="rounded-circle" src="{{ asset('/uploads/users/' ~ app.user.profilePicturePath)|imagine_filter('profile_thumb') }}" height="50" width="50">
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="{{ path('app_user_edit') }}">Edit profile</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                                </ul>
                            </div>
                        </nav>
                        {% else %}
                        <nav class="navbar navbar-expand-sm">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('app_login') }}">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('app_register') }}">Register</a>
                            </li>
                        </nav>
                        {% endif %}
                    </div>
                </nav>
            </header>
            <main>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success border">
                        {{ message }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger border">
                        {{ message }}
                    </div>
                {% endfor %}
                

                {% block body %}
                    <div class="container-lg">
                        <div class="row p-3">
                                {% block content_body %}
                                {% endblock %}
                        </div>
                    </div>
                {% endblock %}
            </main>

            <footer class="mt-auto p-2">
                <p>Footer Text</p>
            </footer>
        </div>
    </body>
</html>
